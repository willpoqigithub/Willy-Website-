  <script>
    const text = "üë®‚Äçüíª Web development | Cybersecurity";
    let i = 0;
    const speed = 60;
    const backspaceSpeed = 30;
    const pauseBeforeDelete = 1500;
    const pauseBeforeType = 1000;
    const typingEl = document.getElementById("typing");

    function typeWriter() {
      if (i < text.length) {
        typingEl.innerHTML += text.charAt(i);
        i++;
        setTimeout(typeWriter, speed);
      } else {
        setTimeout(eraseText, pauseBeforeDelete);
      }
    }/

    function eraseText() {
      if (i > 0) {
        typingEl.innerHTML = text.substring(0, i - 1);
        i--;
        setTimeout(eraseText, backspaceSpeed);
      } else {
        setTimeout(typeWriter, pauseBeforeType);
      }
    }

    window.onload = typeWriter;
